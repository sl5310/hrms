	<queryString>
		<![CDATA[SELECT * ,
		hrms_gsettings.`name` AS company_name
		FROM hrms_employee 
		INNER JOIN `hrms_gsettings` ON hrms_gsettings.organization_id = hrms_employee.organization_id
		WHERE employee_id = $P{employee_id}]]>
